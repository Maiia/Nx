{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@NXworkspace/first-lib": [
        "libs/first-lib/src/index.ts"
      ],
      "@NXworkspace/school-ui": [
        "libs/school-ui/src/index.ts"
      ],
      "@NXworkspace/pagination": [
        "libs/pagination/src/index.ts"
      ],
      "@NXworkspace/pagination-tags": [
        "libs/pagination-tags/src/index.ts"
      ],
      "@NXworkspace/pagination-filters": [
        "libs/pagination-filters/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
